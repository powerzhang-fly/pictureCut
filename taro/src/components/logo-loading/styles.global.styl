$prefixer = 'ui'
$class = s($prefixer + '-cclogo-loading')

.{$class}
  width 36px
  height 36px
  position relative
  overflow hidden

.{$class}-loading-icon
    position relative
    width 100%
    height 100%

.{$class}-scroll-icon
    position absolute
    top 0
    left 0
    width 100% * 20
    height 100%
    animation ui-animate-cclogo-loading 1s steps(1) infinite

    image
      display block
      width 100%
      height 100%

@keyframes ui-animate-cclogo-loading
  for i in 0..20
    {5% * i}
      transform translate3d(-(i * 5%), 0, 0)