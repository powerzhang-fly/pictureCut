button
  margin 0
  padding 0
  background none
  border-radius 0

  &::after, &[plain]
    border none

  &:hover
    background none

  &:active
    background none

.login-btn
  width 186px
  height 40px
  color #ffffff
  font-size 16px
  line-height 40px
  border-radius 100px
  box-shadow 0 2px 6px 0 rgba(47, 90, 255, .2)
  background-image linear-gradient(83deg, rgb(47, 90, 255), rgb(0, 147, 255))

html
  #app
    .taro_page
      height 100%
      background #fff
  button
    display inline-block
    width auto
    border none

  .taro-text
    white-space pre-line
  .taro-tabbar__tabbar-bottom
    margin-bottom calc(env(safe-area-inset-bottom) / 3)
