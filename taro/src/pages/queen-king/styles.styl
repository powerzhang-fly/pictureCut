html
  .shape-page
    height 100%
    max-width 640PX
    margin 0 auto

.shape-page
  height 100vh
  background #f9f9f9
  overflow hidden
  display flex
  flex-direction column
  justify-content space-between

.header-bar
  position fixed
  top 0
  left 0
  right 0
  margin 0 auto
  width 100px
  border-radius 0 0 6px 6px
  font-size 14px
  line-height 1.8
  background #fff
  border 1px dashed #efefef
  border-top none
  text-align center
  z-index 1
.main-wrap
  background #fff
  padding 10px

  @media (max-width 359px)
    padding 5px

.to-choose
  border 1px dashed #efefef
  width 298px
  height 298px
  margin 0 auto
  background url(https://n1image.hjfile.cn/res7/2020/02/13/4b391f3e41cef2d8f387822443eb533b.png) no-repeat center / auto 150px

.image-position
  position relative
  width 300px
  height 300px
  overflow hidden
  margin 0 auto


.canvas-shape-good
  position absolute
  left 0
  top 0
  width 300px
  height 300px
  overflow hidden
  margin 0 auto

.canvas-shape
  position absolute
  left 0
  top -9999px
  width 600px
  height 600px




.image-wrap
  position relative
  width 300px
  height 300px

.image-selected
  width 300px
  height 300px

.image-jiayou
  position absolute
  left 0
  right 0
  bottom 0
  height 169px

  image
    width 100%
    height 100%

.image-btn-jiayou
  position absolute
  left 5px
  top 59px
  width 20px
  height 20px
  background url(https://n1image.hjfile.cn/res7/2020/02/09/2c591b8d9d1c75d1e4d8804e710dc086.png) no-repeat center / contain

.button-wrap
  margin-top 10px
  display flex
  justify-content center
  font-size 12px
  color #2f3742
  line-height 1.5
  text-align center
  flex-wrap wrap

.buttom-tips
  width 100%
  text-align center
  color #95A1AF
  font-size 12px
  margin-bottom 5px

.button-remove,
.button-download
  padding-top 40px
  width 60px
  font-size 10px
  background-size auto 40px
  background-repeat no-repeat
  background-position center top

  @media (max-width 359px)
    padding-top 32px
    background-size auto 30px

.button-remove
  background-image url(https://n1image.hjfile.cn/res7/2020/02/01/63e0c77558a7bc50c4f2666b8df449e0.png)

.button-download
  background-image url(https://n1image.hjfile.cn/res7/2020/02/01/8fb88a2a273c37c6098966681c402f21.png)


.button-avatar
.button-camera
  font-size 12px
  line-height 1.25
  padding 10px
  margin 0 10px
  background transparent!important

.button-avatar:before
  content ''
  display block
  margin 0 auto 3px
  width 30px
  height 30px
  background url(https://n1image.hjfile.cn/res7/2020/02/13/e3c3acc4b66e3715eb59ebc9625527bf.png) no-repeat center / contain


.button-camera:before
  content ''
  display block
  margin 0 auto 3px
  width 30px
  height 30px
  background url(https://n1image.hjfile.cn/res7/2020/02/13/046303789dd41a2f232d799ee18e2a52.png) no-repeat center / contain

.shape-container
  height 100px
  width 100px
  position absolute
  left 0
  top 0
  border dashed 1px yellow

.shape
  width 100%
  height 100%

.bottom-tips-wrap
  padding 10px 0
  font-size 12px
  line-height 1.5
  color #95A1AF
  word-break break-all
  text-align center

.shape-select-wrap
   width 100%
   bottom 5px
   white-space nowrap


.style-list-wrap
  padding 0 10px
  display flex
  justify-content space-evenly

