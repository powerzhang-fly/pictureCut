.style-item-active
  .style-item-image
    box-shadow 0 0 0 1px #2f5aff
  .style-item-text
    color #2f5aff
.style-item-image
  display block
  width 45px
  height 45px
  border-radius 3px

.style-item-text
  margin-top 2px
  font-size 10px
  line-height 1.25
  color #2f3742
  text-align center

.tab-wrap
  .tab-bd
    background #fff
  .tab-hd
    padding 0 10px
    display flex
  
  .tab-hd-item
    padding 0 10px
    font-size 14px
    line-height 30px

  .tab-hd-active
    background #fff
    color #2f5aff
    font-weight 600

  .tab-hd-image
    height 25px
    width 25px

  .tab-bd-image
    height 50px
    width 50px
    margin 5px

    // @media (max-width 359px) 
    //   width 35px
    //   height 35px
    //   margin 3px
  .tab-bd-image-jiayou
    height 28px
    margin-top 27px
  
  .tab-hd-tips
    font-size 12px
    line-height 30px
    color #95A1AF
    margin-left 15rpx



.image-btn-resize-test,
  position absolute
  z-index 1
  width:20px
  height:20px
  background red
  
.image-btn-resize,
.image-btn-remove 
.image-btn-checked
.image-btn-reverse
  position absolute
  z-index 1
  width:20 * 1.3px
  height:20 * 1.3px

