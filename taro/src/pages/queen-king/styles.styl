.image-btn-remove 
  left 0
  top 0
  margin-left -10 * 1.3px
  margin-top -10 * 1.3px
  background url(https://n1image.hjfile.cn/res7/2020/02/09/2c591b8d9d1c75d1e4d8804e710dc086.png) no-repeat center / contain


.image-btn-checked 
  right 0
  top 0
  margin-right -10 * 1.3px
  margin-top -10 * 1.3px
  background url(https://n1image.hjfile.cn/res7/2020/02/11/0b05b7bc398a85da11ff1eb97ed03e1f.png) no-repeat center / contain

.image-btn-reverse
  left 0
  bottom 0
  margin-left -10 * 1.3px
  margin-bottom -10 * 1.3px
  background url(https://n1image.hjfile.cn/res7/2020/02/16/0807e31c8557a250cc24f9e089fbb41d.png) no-repeat center / contain

.test-hat-btn
  position fixed
  right 4px
  top 0
  font-size 12px
  width 14px
  padding 5px
  line-height 1
  border-radius 0 0 15px 15px 
  box-shadow inset 0 0 0 1px #4fa938
  color #4fa938
  text-align center

  &:after
    content ''
    display block
    margin-top 5px
    width 16px
    height 16px
    background url(https://n1image.hjfile.cn/res7/2020/03/15/0e54280cbd8d50a0155c468b5af36e34.png) no-repeat center / contain

.share-btn
  position fixed
  left 4px
  top 0
  font-size 12px
  width 14px
  box-sizing content-box
  padding 5px
  line-height 1
  border-radius 0 0 15px 15px 
  box-shadow inset 0 0 0 1px #2f5aff
  color #2f5aff
  text-align center

.share-btn-icon
  margin 5px auto 0
  width 16px
  height 16px
  background url(https://n1image.hjfile.cn/res7/2020/02/09/6cd2bcc0f4551bf3088f6de4111b50d9.png) no-repeat  center / contain



.poster-dialog
  display none
  position fixed
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  justify-content center
  align-items center
  z-index 10
  background-color rgba(0, 0, 0, .8)
  &.show
    display flex

.poster-dialog-main
  position relative
    
.poster-image
  width 300px
  height 300px

.poster-image-tips
  position absolute
  left 0
  top 5px
  padding 3px 8px
  font-size 12px
  line-height 1.5
  color #fff
  background rgba(0, 0, 0, 0.3)
  border-radius 0 12px 12px 0
.poster-footer-btn
  position relative
  display flex
  justify-content center
  margin-top 15px
  width 100%

  .poster-btn-save
    display flex
    justify-content center
    align-items center
    width 118px
    height 40px
    border 1px solid rgba(255, 255, 255, 1)
    color #fff
    // background linear-gradient(60deg, rgba(47, 90, 255, 1) 0%, rgba(0, 147, 255, 1) 100%)
    font-size 15px
    font-weight 400
    line-height 21px
    border-radius 100px

  .poster-btn-share
    display flex
    justify-content center
    align-items center
    margin-left 33px
    width 118px
    height 40px
    color #fff
    font-size 15px
    font-weight 400
    line-height 21px
    border-radius 100px
    background linear-gradient(60deg, rgba(47, 90, 255, 1) 0, rgba(0, 147, 255, 1) 100%)
    box-shadow 0 2px 6px 0 rgba(47, 90, 255, .2)

  .icon
    margin-right 2px
    width 18px
    height 18px

  .icon-wechat
    margin-right 2px
    width 18px
    height 14px

.poster-dialog-close
  position absolute
  top 0
  right 0
  width 36px
  height 38px
  background url('https://n1image.hjfile.cn/res7/2019/01/10/b18454c07e26f34cbec2fb10474c4a6c.png') no-repeat center / 36px 38px