.thanks-page
  max-width 768PX
  margin 0 auto

.thanks-word
  padding 20px
  font-size 14px
  line-height 1.5
  color #2f3742
  border-bottom 1px solid #e1e1e1

.author-wrap
  display flex
  padding 20px
  justify-content space-between
  align-items center
  border-bottom 1px solid #e1e1e1

  .author-avatar
    width 100px
    height 100px
    border-radius 50%

  .author-name
    display block
    font-size 18px
    line-height 1.5
    color #2f3742
  
  .author-desc
    // white-space nowrap
    display block
    font-size 12px
    line-height 1.5
    color #2f3742
  
  .copy-link-btn
    margin-top 10px
    background #2f5aff
    font-size 16px
    line-height 30px
    width 120px
    color #fff
    border-radius 15px

.reference-wrap
  padding 20px

  .reference-title
    font-size 18px
    line-height 1.5
    color #2f3742
  
  .reference-item
    margin-top: 10px
    display flex
    align-items center


  .reference-image
    width 60px
    height 60px
    margin-right 15px
    border-radius 30px

  .reference-main
    font-size 12px
    line-height 1.5
    color #2f3742
    word-break break-all
  
.version
  padding 15px 0 20px
  color #95A1AF
  font-size 12px
  text-align center
